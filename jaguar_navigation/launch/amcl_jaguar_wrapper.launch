<?xml version="1.0"?>
<launch>
	<arg name="use_map_topic" default="true"/>

    <!-- Run the map server -->
    <node name="map_server" pkg="map_server" type="map_server" args="$(find jaguar_navigation)/maps/smart_room.yaml" output="screen"/>

    <!-- Run AMCL -->
	<node pkg="amcl" type="amcl" name="amcl">
	<!-- Overall filter parameters -->
		<!-- Minimum allowed number of particles. -->
		<param name="min_particles" value="500"/>
		<!-- Maximum allowed number of particles. -->
		<param name="max_particles" value="2000"/>
		<param name="kld_err" value="0.05"/>
		<param name="kld_z" value="0.99"/> <!-- Default -->
		<param name="update_min_d" value="0.1"/>
		<param name="update_min_a" value="0.2"/>
		<param name="resample_interval" value="1"/>
		<!-- Time with which to post-date the transform that is published, to indicate that this transform is valid into the future. -->
		<param name="transform_tolerance" value="0.1"/> <!-- Default -->
		<!-- Number of filter updates required before resampling. -->
		<param name="resample_interval" value="1"/>
		<!-- Exponential decay rate for the slow average weight filter, used in deciding when to recover by adding random poses. A good value might be 0.001. -->
		<param name="recovery_alpha_slow" value="0.001"/>
		<!--Exponential decay rate for the fast average weight filter, used in deciding when to recover by adding random poses. A good value might be 0.1. -->
		<param name="recovery_alpha_fast" value="0.1"/>
		<param name="gui_publish_rate" value="10.0"/>
		<!-- When set to true, AMCL will subscribe to the map topic rather than making a service call to receive its map.-->
		<param name="use_map_topic" value="$(arg use_map_topic)"/>
		<!--  When set to true, AMCL will only use the first map it subscribes to, rather than updating each time a new one is received. -->
		<param name="first_map_only" value="false"/> <!-- Default -->
		<param name="tf_broadcast" value="true"/> <!-- Default -->
	<!-- Laser model parameters -->
		<param name="laser_min_range" value="0.02"/>
		<param name="laser_max_range" value="4"/>
		<param name="laser_max_beams" value="80"/>
		<param name="laser_z_hit" value="0.5"/>
		<param name="laser_z_short" value="0.05"/>
		<param name="laser_z_max" value="0.05"/> <!-- Default -->
		<param name="laser_z_rand" value="0.5"/>
		<param name="laser_sigma_hit" value="0.2"/> <!-- Default -->
		<param name="laser_lambda_short" value="0.1"/> <!-- Default -->
		<param name="laser_likelihood_max_dist" value="2.0"/> <!-- Default -->
		<param name="laser_model_type" value="likelihood_field"/> <!-- Default -->
	<!-- Odometry model parameters -->
		<param name="odom_model_type" value="diff"/>  <!-- Default -->
		<param name="odom_alpha1" value="0.1"/>  <!-- Default -->
		<param name="odom_alpha2" value="0.1"/>  <!-- Default -->
		<param name="odom_alpha3" value="0.1"/>  <!-- Default -->
		<param name="odom_alpha4" value="0.1"/>  <!-- Default -->
		<param name="odom_frame_id" value="/odom"/>  <!-- Default -->
		<param name="base_frame_id" value="/base_link"/>  <!-- Default -->
		<param name="global_frame_id" value="/map"/>  <!-- Default -->
		<!-- Initial pose mean -->
		<param name="initial_pose_x" value="0.0" />
		<param name="initial_pose_y" value="0.0" />
		<param name="initial_pose_a" value="0.0" />
	</node>
</launch>
