<?xml version="1.0"?>
<launch>
    <arg name="no_static_map" default="false"/>

    <!-- Run AMCL -->
    <include file="$(find jaguar_navigation)/launch/amcl_jaguar_wrapper.launch"/>

    <!-- Run move_base -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <rosparam file="$(find jaguar_navigation)/config/costmap_common_params.yaml" command="load" ns="global_costmap"/>
        <rosparam file="$(find jaguar_navigation)/config/costmap_common_params.yaml" command="load" ns="local_costmap"/>

        <rosparam file="$(find jaguar_navigation)/config/local_costmap_params.yaml" command="load"/>
        <rosparam file="$(find jaguar_navigation)/config/global_costmap_params.yaml" command="load"/>

        <rosparam file="$(find jaguar_navigation)/config/move_base_params.yaml" command="load" />
        <rosparam file="$(find jaguar_navigation)/config/base_local_planner_params.yaml" command="load"/>

        <param name="base_global_planner" type="string" value="navfn/NavfnROS" />
        <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS"/>
    </node>
</launch>
